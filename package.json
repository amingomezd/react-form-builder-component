{
  "name": "react-form-builder-component",
  "version": "1.0.5",
  "description": "Form Builder package from json",
  "author": "ktmcodelabs",
  "license": "MIT",
  "repository": "ktmcodelabs/react-form-builder-component",
  "homepage": "https://ktmcodelabs.github.io/react-form-builder-component/",
  "main": "../cireformbuilder/src/forms/index.js",
  "module": "../cireformbuilder/src/forms/index.modern.js",
  "source": "src/index.js",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "microbundle-crl --no-compress --format modern,cjs",
    "start": "microbundle-crl watch --no-compress --format modern,cjs",
    "prepare": "run-s build",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:lint": "eslint .",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "predeploy": "cd example && npm install && npm run build",
    "deploy": "gh-pages -d example/build"
  },
  "keywords": [
    "React JS",
    "React",
    "Form",
    "Form Builder"
  ],
  "bugs": {
    "url": "https://github.com/ktmcodelabs/react-form-builder-component/issues"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "cross-env": "^7.0.3",
    "gh-pages": "^3.2.3",
    "microbundle-crl": "^0.13.11",
    "npm-run-all": "^4.1.5",
    "@babel/core": "^7.15.8"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "uuid": "^8.3.2"
  }
}
